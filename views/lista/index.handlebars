<h2>Postagens</h2>
<hr>
{{#each postagens}}
    <div class="card mt-4">
    <div class="card-body">        
        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
        <hr>        
        <small>Data de publicação: {{data}}</small>
    </div>
</div>
{{else}}
<h3>Nenhuma postagem registrada</h3>
{{#if user}}
<h4 class="mt-4">Registrar postagem: <a href="/admin/postagens/add" class="btn btn-success">Criar</a></h4>
{{else}}
<h5>Apenas admins podem registrar novas postagens</h5>
{{/if}}
{{/each}}